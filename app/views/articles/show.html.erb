<div id="page-content">
<center><h1 class="m-3">Showing Article Details</h1></center>

<center>
<div class="container bg-light p-4 shadow rounded">
    <p><strong>Title: </strong><br><%= @article.title %></p>
    <p><strong>Description: </strong><br><%= @article.description %></p>
</div>
</center>
<br>
<center>
<%= link_to 'Edit', edit_article_path(@article), class: 'btn btn-outline-info' %>
<%= link_to 'Delete', article_path(@article), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger' %> <br><br>
<%= link_to '[ Return to Articles Listing ]', articles_path, class: 'text-lighter' %>
</center>
</div>
